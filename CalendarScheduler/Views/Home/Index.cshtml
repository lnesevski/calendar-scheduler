
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4">Welcome to the Calendar Work Event Scheduler</h2>
</div>

@if (SignInManager.IsSignedIn(User))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        Please add your countries' holiday calendar to your google calendar. 
        <strong><a href="https://support.google.com/calendar/answer/6084659?hl=en&co=GENIE.Platform%3DDesktop&oco=0#zippy=%2Cadd-or-change-country-and-region-holidays%2Cadd-or-remove-national-or-religious-holidays-other-calendars">Click here to see how.</a></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="container">
        <a type="button" class="btn btn-primary" asp-action="OauthRedirect">Grant Google Calendar Privileges</a>

        <a type="button" class="btn btn-danger" asp-controller="OAuth" asp-action="Revoke">Revoke Google Calendar Privileges</a>
    </div>
}